<h1>Listing users</h1>
  <% if notice %>
  <p id="notice" ><%= notice %></p>
  <% end %>


<table>
  <tr>
    <th>Name/Hashed_password</th>
    <th>Salt</th>    
    <th>Created</th>         
  </tr>  

<% @users.each do |user| %>
  <tr>
    <td align="center"><%= user.name %></td> 
    <td><%= user.salt %></td>      
    <td><%= user.created_at %></td>         
  </tr>
  <tr>
     <th><%= user.hashed_password %></th>
     <td>&nbsp</td>
     <td align="right"><%= link_to 'Show', user %> <%= link_to 'Edit', edit_user_path(user) %> <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>   
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
